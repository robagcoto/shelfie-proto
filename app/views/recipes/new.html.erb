<%= simple_form_for @recipe, html: { multipart: true }  do |f| %>
  <%# <%= f.input, as: :file, label: "Upload your image" %>
  <%= f.input :category, label: "Category"%>
  <%= f.input :name, label: "Name of the recipe"%>
  <%= f.input :ingredients, label: "List of your ingredients"%>
  <%= f.input :quantity, label: 'Quantity' %>
  <%= f.input :description, label: "Description"%>
  <%= f.button :submit, "Create recipe" %>
<% end %>
