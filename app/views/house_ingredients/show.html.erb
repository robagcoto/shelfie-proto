<%= render partial: "shared/top_nav", locals: { return_url: house_house_ingredients_path, fav_display: false, edit_display: false, add_display: false, add_ingredient: false } %>

<div class="container" style="margin-top: 50px;">

  <div class="row">
    <div class="col-6">
      <div class="card bg-secondary text-primary mx-0" style="padding: 20px; margin-bottom: 20px;">
        <div class="card-body">
          <h5 class="card-title"><%= @house_ingredient.ingredient.name.capitalize %></h5>
          <p class="card-text">fresh for todays</p>
        </div>
      </div>
    </div>

    <div class="col-6">
      <div class="card bg-secondary text-primary" style="padding: 30px; margin-bottom: 20px;">
        <div class="card-body">
          <h5 class="card-title"><%= @house_ingredient.quantity %> <%= @house_ingredient.unit %></h5>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card bg-secondary text-primary" style="margin-bottom: 20px;">
        <div class="card-body">
          <h5 class="card-title"><%= @house_ingredient.ingredient.name.capitalize %></h5>
          <p class="card-text">fresh for todays</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card bg-secondary text-primary" style="margin-bottom: 20px;">
        <div class="card-body">
          <h5><%= @house_ingredient.ingredient.category.capitalize %></h5>
          <h5><%= @house_ingredient.expiration_date %></h5>
          <p class="card-text">fresh for todays</p>
        </div>
      </div>
    </div>
  </div>
</div>
