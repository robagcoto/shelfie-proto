  <%= render partial: "shared/top_nav", locals: { return_url: root_path, fav_display: false, edit_display: false, add_display: false, add_ingredient: true } %>

<div class="container">
  <div class="row text-center">

      <h1><%= @house.name %> ingredients</h1>

    <div class="categories-filter d-flex justify-content-between">
      <%= link_to house_house_ingredients_path(@house.id, category: "All"), data: { turbo_stream: true } do %>
        <div class="col card-ingredients m-2 bg-primary text-secondary">
            <h4 class="m-2">All</h4>
        </div>
      <% end %>

      <%= link_to house_house_ingredients_path(@house.id, category: "Meats"), data: { turbo_stream: true } do %>
        <div class="col card-ingredients m-2 bg-primary text-secondary">
            <h4 class="m-2">Meats</h4>
        </div>
      <% end %>

      <%= link_to house_house_ingredients_path(@house.id, category: "Fish and seafood"), data: { turbo_stream: true } do %>
        <div class="col card-ingredients m-2 bg-primary text-secondary">
          <h4 class="m-2">Fishes</h4>
        </div>
      <% end %>

      <%= link_to house_house_ingredients_path(@house.id, category: "Vegetables"), data: { turbo_stream: true } do %>
        <div class="col card-ingredients m-2 bg-primary text-secondary">
          <h4 class="m-2">Veggies</h4>
        </div>
      <% end %>

      <%= link_to house_house_ingredients_path(@house.id, category: "Meats"), data: { turbo_stream: true } do %>
        <div class="col card-ingredients m-2 bg-primary text-secondary">
          <h4 class="m-2">Fruits</h4>
        </div>
      <% end %>

      <%= link_to house_house_ingredients_path(@house.id, category: "Bread, cereals, and nuts"), data: { turbo_stream: true } do %>
        <div class="col card-ingredients m-2 bg-primary text-secondary">
          <h4 class="m-2">Carbs</h4>
        </div>
      <% end %>

      <%= link_to house_house_ingredients_path(@house.id, category: "Dairy and eggs"), data: { turbo_stream: true } do %>
        <div class="col card-ingredients m-2 bg-primary text-secondary">
          <h4 class="m-2">Dairies</h4>
        </div>
      <% end %>

    </div>
  </div>


  <div class="container">
    <div class="mt-3">
      <ul id="ingredients" style="margin-bottom: 100px">
        <% @house_ingredients.each do |house_ingredient| %>
          <li><%= link_to (house_ingredient.ingredient.name).capitalize, house_house_ingredient_path(@house, house_ingredient) %>: <%= house_ingredient.quantity %> <%= house_ingredient.unit %> you have <strong><%= (house_ingredient.expiration_date - Date.today).to_i %> days left </strong></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
