  <div class="row gx-3 gy-3">
    <% @chats.each do |chat| %>
      <div class="col-6">
        <%= link_to chat.title, chat_messages_path(chat),
              class: "btn btn-outline-primary w-100 text-truncate",
              style: "border-radius: 10px; max-width: 100%;" %>
      </div>
    <% end %>

    <p>
    </p>

  <div>
    <%= link_to 'ask a question', new_chat_path, class: "btn btn-primary btn-xl mb-3" %>
  </div>
</div>

<div class="fixed-bottom p-3 border-top bg-white">
  <%= link_to 'Ask a question', root_path, class: "btn btn-primary btn-lg w-100" %>
</div>
