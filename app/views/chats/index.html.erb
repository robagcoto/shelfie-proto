<div class="container mt-4">

  <div class="position-fixed top-0 start-0 w-100" style="z-index: 1050; padding: 0.5rem 0; background: #f4f4f4;">
    <div class="container">
      <%= link_to root_path do %>
        <%= image_tag "return.png", alt: "return", width: 50, height: 50, class: "rounded-circle p-1" %>
      <% end %>
    </div>
  </div>

  <div style="padding-top: 70px;">
    <div class="row g-3">
      <% @chats.each do |chat| %>
        <div class="col-12">
          <%= link_to chat.title, chat_messages_path(chat),
                class: "btn w-100 text-truncate shadow",
                style: "border-radius: 10px; max-width: 100%;" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="fixed-bottom p-3 border-top bg-white">
    <%= link_to 'Ask a question', new_chat_path, class: "btn btn-primary btn-lg w-100 shadow" %>
  </div>
</div>
