<div class="container">

  <div class="d-flex justify-content-between align-items-center">

    <div>
      <h1 class="mb-0 mt-0" style="font-size:35px;">Welcome to Shelfie!</h1>
      <p class="fs-6 text-muted">Explore your recipes, ingredients, and much more</p>
    </div>

    <div class="mb-5">
      <%= link_to root_path, class: "rounded-circle" do %>
        <%= image_tag "icon_user.png", alt: "User", style: "width:60px; height:60px;" %>
      <% end %>
    </div>

  </div>

  <div class="col">

    <div class="card h-100 shadow-sm">
      <div class="card card-background text-secondary">
        <div class="card-img-overlay">

        <h5 class="card-title">Ingredients alerts</h5>

        <ul class="list-unstyled">
          <li>eggs</li>
          <li>butter</li>
          <li>onion</li>
        </ul>

        <div class="text-end">
          <%= link_to root_path, class: "rounded-circle" do %>
            <%= image_tag "view-light.png", alt: "return", width: 50, height: 50, class: "rounded-circle" %>
          <% end %>
        </div>

        </div>
      </div>
    </div>

    <div class="card h-100 shadow-sm my-3">
      <div class="card card-light-background text-primary">
        <div class="card-img-overlay">

          <h5 class="card-title">Recipes</h5>

          <ul class="list-unstyled">
            <% @recipes.first(3).each do |recipe| %>
              <li><%= recipe.name %></li>
            <% end %>
          </ul>

          <div class="text-end">
            <%= link_to recipes_path, class: "rounded-circle" do %>
              <%= image_tag "view.png", alt: "return", width: 50, height: 50, class: "rounded-circle" %>
            <% end %>
          </div>

        </div>
      </div>
    </div>


    <%= link_to chats_path do %>
      <div class="card h-100 shadow-sm my-3">
        <div class="card card-other-background text-secondary">
          <div class="card-img-overlay text-center">
              <%= image_tag "shelfie-logo-chat-1.png", alt: "return", width: 120, height: 120, class: "rounded-circle" %>

              <h5 class="p-0">Cooking Assistant</h5>
              <p>"What would you like to cook today?"</p>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
