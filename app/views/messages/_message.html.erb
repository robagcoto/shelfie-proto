<% if message.role == "user" %>
  <div class="text-end my-3">
    <div class="d-inline-block px-3 pt-2 bg-primary text-white" style="border-radius: 20px;">
      <p class="mb-1"><strong></strong></p>
      <%= simple_format(message.prompt) %>
    </div>
  </div>
<% else %>
  <div class="text-start my-3">
    <div class="d-inline-block p-2 bg-light" style="border-radius: 20px;">
      <p class="mb-1"><strong></strong></p>
      <%= simple_format(message.prompt) %>
      <%# button_to dans le bloc note %>
      <%= image_tag "fav-light.png", alt: "return", width: 40, height: 40, class: "rounded-circle" %>
    </div>
  </div>
<% end %>
