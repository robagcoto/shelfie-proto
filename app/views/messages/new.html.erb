<div class="container mt-4">

  <div class="col my-3">
    <%= link_to 'return', root_path, class: "btn btn-secondary btn-xl mb-3" %>

    <div class="card shadow-sm rounded-5">
      <div class="card-body">

        <h1 class="card-title">Cooking Assistant</h1>
        <p class="card-text">Type what's on your mind and your assistant will recommend a recipe.</p>

        <%= simple_form_for [@chat, @message] do |f| %>
          <%= f.input :prompt, placeholder: "Type whats on your mind to get a recommendation", required: true, label: false, input_html: { class: "form-control form-control-lg" } %>
          <%= f.button :submit, 'Submit', class: 'btn btn-primary btn-xl w-100' %>
        <% end %>

      </div>
    </div>
  </div>

</div>

